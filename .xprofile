#########################
#	      Autostart	      #
#########################

# Bluetooth applet
blueman-applet &

# NetworkManager applet
nm-applet --indicator &

# Sound control tray
pasystray &

# Hide mouse when typing
xbanish &

# Flameshot screenshots app
flameshot &

# Audio volume controller
#volnoti &

# Compositor
picom -CGb &

# Apps
alacritty &
brave &
obsidian &
thunderbird &
1password &
pcmanfm &
carla &

~/.fehbg &

#########################
#	      Tweaks		      #
#########################

# Don't Randomly Turn off
xset s off
xset -dpms
xset s noblank

# Speedy keys
xset r rate 210 40

xrandr -s 1920x1080
